<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="3"
    android:layout_margin="@dimen/activity_horizontal_margin"
    >

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/medicine_checked"
        android:text="medicineName"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor = "@color/colorPrimaryDark"
        />

    <TextView android:id="@+id/medicine_duration_choice"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:text="Daily"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="100dp"
        android:id="@+id/delete_medicine"/>
    <ImageView
        android:layout_width="@dimen/medicine_display_pic_width"
        android:layout_height="@dimen/medicine_display_pic_height"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

        <ListView
            android:id="@+id/medicine_time_of_day"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor = "@color/colorPrimaryDark"
            >
        </ListView>

    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/pill_directions"
        android:id="@+id/medicine_pill_directions"
        android:textColor = "@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>



</GridLayout>